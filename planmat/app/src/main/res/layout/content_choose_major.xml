<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="planmat.appgui.ChooseMajorActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Major:"
        android:id="@+id/txtMajor"
        android:textColor="@color/abc_primary_text_material_light"
        android:textSize="20dp"
        android:inputType="none"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spMajor"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false"
        android:spinnerMode="dropdown"
        android:scrollIndicators="top|bottom"
        android:layout_below="@+id/txtMajor"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Requirements:"
        android:id="@+id/txtRequirements"
        android:layout_marginTop="42dp"
        android:textColor="@color/abc_primary_text_material_light"
        android:textSize="20dp"
        android:inputType="none"
        android:layout_below="@+id/spMajor"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnRequirements"
        android:transitionGroup="false"
        android:touchscreenBlocksFocus="false"
        android:spinnerMode="dropdown"
        android:scrollIndicators="top|bottom"
        android:layout_below="@+id/txtRequirements"
        android:layout_alignLeft="@+id/spMajor"
        android:layout_alignStart="@+id/spMajor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/buttonOK"
        android:onClick="buttonOK"
        android:layout_below="@+id/spnRequirements"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />
</RelativeLayout>
